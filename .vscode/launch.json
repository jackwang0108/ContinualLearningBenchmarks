{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug utils",
            "type": "debugpy",
            "request": "launch",
            "module": "utils.${fileBasenameNoExtension}",
            "console": "integratedTerminal"
        },
        {
            "name": "debug model",
            "type": "debugpy",
            "request": "launch",
            "module": "model.${fileBasenameNoExtension}",
            "console": "integratedTerminal"
        },
        {
            "name": "debug src",
            "type": "debugpy",
            "request": "launch",
            "module": "src.${fileBasenameNoExtension}",
            "console": "integratedTerminal"
        },
        {
            "name": "debug main",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": [
                "--model",
                "${input:clalgo}",
                "--backbone",
                "resnet18"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        }
    ],
    "inputs": [
        {
            "id": "clalgo",
            "type": "pickString",
            "description": "which cl algorithm you want to debug?",
            "options": [
                "finetune",
                "iCaRL"
            ],
            "default": "finetune"
        }
    ]
}